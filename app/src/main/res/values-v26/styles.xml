<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="justified_text">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="coerencia_text" parent="justified_text">
        <item name="android:autoSizeMinTextSize">14sp</item>
        <item name="android:autoSizeMaxTextSize">32sp</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>
</resources>