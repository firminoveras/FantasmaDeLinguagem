<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="acentuacao_key">
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/bg_acentuacao_key_bg</item>
        <item name="android:backgroundTint">#D1D1D1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="acentuacao_end_words_easy">
        <item name="android:lines">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_acentuacao_texto_resposta</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_columnWeight">1</item>
    </style>
    <style name="acentuacao_end_words_medium" parent="acentuacao_end_words_easy">
        <item name="android:backgroundTint">#FFA726</item>
    </style>
    <style name="acentuacao_end_words_hard" parent="acentuacao_end_words_easy">
        <item name="android:backgroundTint">@color/red</item>
    </style>
    <style name="acentuacao_end_words_veryhard" parent="acentuacao_end_words_easy">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="acentuacao_end_points" parent="acentuacao_end_words_easy">
        <item name="android:background">#00000000</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="justified_text">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="coerencia_text" parent="justified_text">

    </style>

    <style name="pontuacao_pontuacao_select">
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:background">@drawable/bg_double_circle_ripple_unselected</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:tint">#969696</item>

    </style>

    <style name="pontuacao_tab_item" />

</resources>