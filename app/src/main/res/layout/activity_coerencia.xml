<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coerencia_fg"
    android:gravity="center_horizontal"
    android:padding="12dp"
    tools:context=".CoerenciaActivity"
    tools:ignore="HardcodedText, ContentDescription">

    <GridLayout
        android:id="@+id/Coerencia_HeaderTexts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:columnCount="3"
        android:elevation="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_acentuacao_key_bg"
            android:backgroundTint="@color/red"
            android:elevation="8dp"
            android:gravity="center"
            android:padding="6dp"
            android:text="-500 Pontos"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_coerencia_button_ripple"
            android:backgroundTint="@color/main_fg"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="6dp"
            android:text="PONTOS"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_acentuacao_key_bg"
            android:backgroundTint="@color/red"
            android:elevation="8dp"
            android:gravity="center"
            android:padding="6dp"
            android:text="-1000 Pontos"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/Coerencia_Header"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_below="@+id/Coerencia_HeaderTexts"
        android:layout_marginTop="-16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Coerencia_Button_Pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_coerencia_button_ripple"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="12dp"
            android:text="Desbloquear Significado"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Coerencia_Pontos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_coerencia_button_ripple"
            android:backgroundTint="@color/coerencia_bg"
            android:gravity="center"
            android:padding="6dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Coerencia_Button_Buy_Tip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_coerencia_button_ripple"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="12dp"
            android:text="Desbloquear Sinônimo"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/Coerencia_Text_Nivel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Coerencia_Header"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Nível 1"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Coerencia_Text_Nivel_Dificuldade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Coerencia_Text_Nivel"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Palavra Fácil"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/Coerencia_Progress_Niveis"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Coerencia_Text_Nivel_Dificuldade"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:max="10"
        android:progress="1"
        android:progressTint="@color/coerencia_bg" />


    <ScrollView
        android:id="@+id/Coerencia_Text_Lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/Coerencia_Tip_Lay"
        android:layout_below="@+id/Coerencia_Progress_Niveis"
        android:layout_margin="6dp"
        android:background="@drawable/bg_splash_button"
        android:backgroundTint="@color/coerencia_bg"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Coerencia_MainText"
                style="@style/coerencia_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="6dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Coerencia_MainTextAuthor"
                style="@style/justified_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="6dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="italic" />
        </LinearLayout>
    </ScrollView>


    <HorizontalScrollView
        android:id="@+id/Coerencia_Tip_Lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Coerencia_Words_Ball_Lay"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/bg_splash_button"
        android:backgroundTint="@color/main_bg2"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Coerencia_Tip"
                style="@style/justified_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:lines="3"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>


    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/Coerencia_Words_Ball_Lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="12dp">

        <ImageView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:src="@drawable/acentuacao_back_circle"
            app:tint="#997E57C2" />

        <ImageView
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:src="@drawable/acentuacao_back_circle"
            app:tint="#997E57C2" />

        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:src="@drawable/acentuacao_back_circle"
            app:tint="@color/coerencia_bg" />

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Coerencia_Win_Points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="500"
                android:textColor="@color/main_fg"
                android:textSize="42sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:focusable="false"
                android:text="PONTOS"
                android:textColor="@color/main_fg"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


        <com.magicgoop.tagsphere.TagSphereView
            android:id="@+id/Coerencia_Words_Ball"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center"
            app:rotateOnTouch="true" />

        <TextView
            android:id="@+id/Coerencia_Selected_Word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alpha="0"
            android:background="@drawable/bg_acentuacao_key_confirm"
            android:backgroundTint="@color/red"
            android:clickable="false"
            android:elevation="4dp"
            android:focusable="false"
            android:padding="12dp"
            android:text="Palavra"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </FrameLayout>

</RelativeLayout>