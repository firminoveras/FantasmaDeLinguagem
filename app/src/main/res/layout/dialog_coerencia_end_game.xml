<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/Coerencia_End_Root"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="12dp"
    tools:ignore="ContentDescription, HardcodedText">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:src="@drawable/ic_end_game"
        app:tint="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Fim de Jogo"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/Coerencia_End_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12sp"
        android:elevation="4dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Você chegou até o final!"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:elevation="4dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Resumo da partida"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_acentuacao_key_bg"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="6dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="10">

            <TextView
                android:id="@+id/Coerencia_End_Word1"
                style="@style/acentuacao_end_words_easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0" />

            <TextView
                android:id="@+id/Coerencia_End_Word2"
                style="@style/acentuacao_end_words_easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0" />

            <TextView
                android:id="@+id/Coerencia_End_Word3"
                style="@style/acentuacao_end_words_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0" />

            <TextView
                android:id="@+id/Coerencia_End_Word4"
                style="@style/acentuacao_end_words_hard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="0" />

            <TextView
                android:id="@+id/Coerencia_End_Word5"
                style="@style/acentuacao_end_words_veryhard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_rowWeight="1"
                android:layout_column="0" />

            <TextView
                android:id="@+id/Coerencia_End_Point1"
                style="@style/acentuacao_end_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1" />

            <TextView
                android:id="@+id/Coerencia_End_Point2"
                style="@style/acentuacao_end_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1" />

            <TextView
                android:id="@+id/Coerencia_End_Point3"
                style="@style/acentuacao_end_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1" />

            <TextView
                android:id="@+id/Coerencia_End_Point4"
                style="@style/acentuacao_end_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1" />

            <TextView
                android:id="@+id/Coerencia_End_Point5"
                style="@style/acentuacao_end_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1" />

        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:elevation="4dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Total de Pontos"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Coerencia_End_Points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:visibility="gone"
            android:id="@+id/Coerencia_End_Record"
            style="@style/acentuacao_end_words_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#5C6BC0"
            android:drawablePadding="4dp"
            android:elevation="4dp"
            android:gravity="center"
            android:paddingStart="6dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            android:text="NOVO RECORDE"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_star"
            app:drawableTint="@color/white" />

    </LinearLayout>

    <ImageView
        android:id="@+id/Coerencia_End_Close"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_acentuacao_texto_button_ripple"
        android:gravity="center"
        android:padding="12dp"
        android:src="@drawable/ic_acentuacao_confirm"
        app:tint="@color/white" />

</LinearLayout>